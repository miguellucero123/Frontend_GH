    <!-- Login Card (glassmorphism como React) -->
    <div class="bg-white/10 backdrop-blur-lg border border-white/20 p-8 rounded-3xl shadow-2xl w-full max-w-md relative z-10 transition-all duration-500 hover:shadow-blue-500/20">
        <div class="text-center mb-8">
            <!-- Status Badge (igual que React) -->
            <div class="flex justify-center mb-4">
